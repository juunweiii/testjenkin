{
	"name": "stimstim7-forum-backend-services",
	"version": "0.0.1",
	"main": "app.js",
	"license": "GNU General Public License v3.0",
	"scripts": {
		"solo": "dotenvx run -- ./node_modules/.bin/fastify start --options ./src/app.js",
		"start": "dotenvx run -- pm2 start && pm2 monit",
		"dev": "dotenvx run -- pm2 start ecosystem.config.js --no-daemon --env development",
		"docker-dev": "dotenvx run -f .env.docker.local -- pnpm pm2 start ecosystem.config.js --no-daemon --env development",
		"staging": "dotenvx run -f .env.staging -- pnpm pm2 start ecosystem.config.js --no-daemon --env staging ",
		"production": "dotenvx run -f .env.production -- pnpm pm2 start ecosystem.config.js --no-daemon --env production",
		"kill": "pm2 stop backend-app && pm2 delete backend-app",
		"migrate": "dotenvx run -- node src/db/migrations/migrations.js",
		"migrate-full": "dotenvx run -- node src/db/migrations/migrations.js full",
		"migrate-docker": "node src/db/migrations/migrations.js",
		"encrypt": "dotenvx vault encrypt",
		"decrypt": "dotenvx vault decrypt",
		"load-test": "dotenvx run -- bash ./test/k6/local/load-local.sh",
		"unit-test": "dotenvx run -- mocha -c ./test/mocha/masteryTest.mjs --exit"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.5.0",
		"@fastify/auth": "^4.6.1",
		"@fastify/autoload": "^5.10.0",
		"@fastify/circuit-breaker": "^3.2.0",
		"@fastify/cookie": "^9.3.1",
		"@fastify/cors": "^9.0.1",
		"@fastify/csrf-protection": "^6.4.1",
		"@fastify/helmet": "^11.1.1",
		"@fastify/jwt": "^8.0.1",
		"@fastify/rate-limit": "^9.1.0",
		"@fastify/swagger": "^8.14.0",
		"@fastify/swagger-ui": "^4.0.0",
		"@hapi/boom": "^10.0.1",
		"ajv": "^8.16.0",
		"ajv-formats": "^3.0.1",
		"argon2": "^0.40.3",
		"argon2-cli": "^0.25.1",
		"await-to-js": "^3.0.0",
		"casbin": "^5.30.0",
		"casbin-mongoose-adapter": "^5.3.1",
		"chai": "^5.1.1",
		"chai-http": "^5.0.0",
		"fastify": "^4.28.1",
		"fastify-cli": "^6.2.1",
		"fastify-plugin": "^4.5.1",
		"ioredis": "^5.4.1",
		"jose": "^5.6.2",
