		"nodemailer": "^6.9.14",
		"nodemailer-mailgun-transport": "^2.1.5",
		"nodemon": "^3.1.4",
		"pino": "^9.2.0",
		"pino-discord-webhook": "^0.1.1",
		"pino-pretty": "^11.2.1",
		"pino-roll": "^1.1.0",
		"pino-socket": "^7.3.0",
